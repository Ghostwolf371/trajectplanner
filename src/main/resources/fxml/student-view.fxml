<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.trajectplanner.controllers.StudentController"
            stylesheets="@../css/styles.css">
    <left>
        <VBox styleClass="sidebar" spacing="10">
            <padding><Insets top="20" left="20" right="20" bottom="20"/></padding>
            
            <!-- Logo and Title -->
            <Label text="Trajectplanner" styleClass="sidebar-title"/>
            
            <!-- Navigation Buttons -->
            <Button text="Dashboard" styleClass="sidebar-button" onAction="#navigateToDashboard"/>
            <Button text="Studenten" styleClass="sidebar-button active" onAction="#navigateToStudents"/>
            <Button text="Tentamens" styleClass="sidebar-button" onAction="#navigateToExams"/>
            <Button text="Cursussen" styleClass="sidebar-button" onAction="#navigateToCourses"/>
            
            <!-- Spacer to push admin section to bottom -->
            <VBox VBox.vgrow="ALWAYS"/>
            
            <!-- Admin User Section -->
            <VBox styleClass="admin-section">
                <Label text="Admin User" styleClass="admin-label"/>
                <Label text="Admin" styleClass="admin-name"/>
            </VBox>
            
            <!-- Logout Button -->
            <Button text="Logout" styleClass="logout-button" onAction="#handleLogout"/>
        </VBox>
    </left>
    
    <center>
        <VBox spacing="20" styleClass="content-container">
            <padding><Insets top="20" right="20" bottom="20" left="20"/></padding>
            
            <!-- Header -->
            <HBox alignment="CENTER_LEFT" spacing="10">
                <Label text="Studenten" styleClass="page-title"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Button text="Nieuwe Student" styleClass="primary-button" onAction="#handleAddStudent"/>
            </HBox>
            
            <!-- Search Bar -->
            <HBox spacing="10" alignment="CENTER_LEFT">
                <TextField fx:id="searchField" promptText="Zoek studenten..." styleClass="search-field"/>
                <Region HBox.hgrow="ALWAYS"/>
            </HBox>
            
            <!-- Student Table -->
            <TableView fx:id="studentTable" VBox.vgrow="ALWAYS" styleClass="data-table">
                <columns>
                    <TableColumn fx:id="studentNumberColumn" text="Studentnummer" prefWidth="150"/>
                    <TableColumn fx:id="firstNameColumn" text="Voornaam" prefWidth="150"/>
                    <TableColumn fx:id="lastNameColumn" text="Achternaam" prefWidth="150"/>
                    <TableColumn fx:id="majorColumn" text="Opleiding" prefWidth="150"/>
                    <TableColumn fx:id="cohortColumn" text="Cohort" prefWidth="100"/>
                    <TableColumn fx:id="genderColumn" text="Geslacht" prefWidth="100"/>
                    <TableColumn fx:id="birthdateColumn" text="Geboortedatum" prefWidth="150"/>
                    <TableColumn fx:id="totalEcColumn" text="EC" prefWidth="100"/>
                </columns>
            </TableView>
            
            <!-- Action Buttons -->
            <HBox spacing="10" alignment="CENTER_RIGHT">
                <Button text="Bewerken" styleClass="secondary-button" onAction="#handleEditStudent"/>
                <Button text="Verwijderen" styleClass="danger-button" onAction="#handleDeleteStudent"/>
            </HBox>
        </VBox>
    </center>
</BorderPane> 